########################
### General settings ###
########################
DOMAIN="{{ item.domain | default(domain) }}"
## Controls if new users can register
SIGNUPS_ALLOWED="{{ item.signups | default(signups) }}"
## Invitations org admins to invite users, even when signups are disabled
INVITATIONS_ALLOWED="{{ item.invitations | default(invitations) }}"

{% if item.use_smtp | default(use_smtp) is defined and item.use_smtp | default(use_smtp) == true %}
###########################
### SMTP Email settings ###
###########################
SMTP_HOST="{{ item.email_host | default(email_host) }}"
SMTP_FROM="{{ item.email_from | default(email_from) }}"
SMTP_FROM_NAME="{{ item.email_from_name | default(email_from_name) }}"
SMTP_USERNAME="{{ item.email_user | default(email_user) }}"
SMTP_PASSWORD="{{ item.email_pass | default(email_pass) }}"
SMTP_TIMEOUT="{{ item.email_timeout | default(email_timeout) }}"
SMTP_SECURITY="{{ item.email_tls | default(email_tls) }}"
SMTP_PORT="{{ item.email_port | default(email_port) }}"
{% else %}
{% endif %}
